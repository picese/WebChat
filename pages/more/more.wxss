/* 导航分区 */
.index-content {
	display: flex;
	flex-wrap: wrap;
}

.index-item {
	width: 33.33333%;
	height: 200rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	border-bottom: 1rpx solid #ccc;
	font-size: 14px;
	cursor: pointer;
}

.index-item:nth-child(3n)::after {
	width: 0rpx;
}	

.index-item image {
	width: 70rpx;
	height: 70rpx;
	padding-bottom: 10rpx;
}