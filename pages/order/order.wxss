/**index.wxss**/

.container {
        position: absolute;
        width: 100%;
        height: 100%;
        background: #eee;
}

.item-content {
        float: left;
        width: calc(100% - 10px);
        height: 100%;
}

.item-content .box {
        margin-left: 18rpx;
        overflow: scroll;
        background-color: #fff;
        margin-top: 18rpx;
}

.item-content .box::-webkit-scrollbar {
        width: 0;
}

.item-content .box .name {
        display: flex;
        justify-items: center;
        align-items: center;
        background-color: #fff;
        padding: 20rpx 0;
        border-bottom: 1px solid #eee;
}

.item-content .box .name image {
        width: 80rpx;
        height: 80rpx;
        padding-left: 22rpx;
}

.item-content .box .name text {
        font-size: 15px;
        padding-left: 20rpx;
}

.item-content .box .item {
        height: 80px;
        padding: 10px 0 10px 10px;
        background: #fff;
        margin-bottom: 6rpx;
        border-bottom: 1px solid #eee;
}

.item-content .box .item image {
        display: block;
        float: left;
        height: 80px;
        width: 90px;
        margin-right: 10px;
}

.item-content .box .item text {
        display: block;
        font-size: 16px;
}

.item-content .box .item .title {
        margin-bottom: 5px;
        font-weight: bolder;
}

.item-content .box .item .price {
        color: red;
        font-size: 18px;
        margin-bottom: 5px;
}

.item-content .box .item .opera {
        margin-top: -60rpx;
        padding-right: 10px;
        text-align: right;
}

.item-content .box .item .opera text {
        display: inline-block;
        font-size: 18px;
}

.item-content .box .opera .btn {
        display: inline-block;
        height: 30px;
        width: 30px;
        line-height: 30px;
        text-align: center;
        color: #fff;
        font-weight: bolder;
        background: orange;
        border-radius: 5px;
}

.item-content .box .opera .num {
        padding: 2px 15px;
}

.bottom-bar {
        display: flex;
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 80px;
        line-height: 80px;
        background: #fff;
        box-shadow: 0 -5px 10px #ccc;
}

.bottom-bar.hidden {
        display: none;
}

.bottom-bar>view {
        flex-grow: 1;
}

.bottom-bar .count {
        padding-left: 10px;
}

.bottom-bar .num {
        margin-right: 10px;
        font-size: 18px;
        font-weight: bolder;
        color: red;
}

.bottom-bar .btn {
        height: 40px;
        width: 50px;
        margin: 20px 10px 0 0;
        color: #fff;
        line-height: 40px;
        text-align: center;
        font-size: 16px;
        background: orange;
}
